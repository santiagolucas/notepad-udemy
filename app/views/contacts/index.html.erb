<div class="basic-grey">
  <p id="notice"><%= notice %></p>
  <h1>Contatos</h1>
  
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Tipo</th>
        <th>Descrição</th>
        <th>Rua</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          <td><%= contact.rmk %></td>
          <td><%= contact.endereco.rua %></td>
          <td><%= contact.endereco.cidade %></td>
          <td><%= contact.endereco.estado %></td>
          <td><%=  %></td>
          <td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Contact', new_contact_path %>
</div>